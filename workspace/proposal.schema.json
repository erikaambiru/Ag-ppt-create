{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Proposal Schema",
  "description": "Brainstormer Agent が生成するスライド提案書のスキーマ",
  "type": "object",
  "required": ["metadata", "outline"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "duration_minutes", "audience", "goal"],
      "properties": {
        "title": {
          "type": "string",
          "description": "スライドのタイトル"
        },
        "presenter": {
          "type": "string",
          "description": "発表者名（オプション）"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "発表日（YYYY-MM-DD）"
        },
        "duration_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120,
          "description": "発表時間（分）"
        },
        "audience": {
          "type": "object",
          "required": ["role"],
          "properties": {
            "role": {
              "type": "string",
              "description": "聴衆の役職・職種"
            },
            "tech_level": {
              "type": "string",
              "enum": ["初級", "中級", "上級", "混合"],
              "description": "技術レベル"
            },
            "size": {
              "type": "string",
              "description": "聴衆の人数（目安）"
            }
          }
        },
        "goal": {
          "type": "string",
          "description": "プレゼンのゴール（何を達成したいか）"
        },
        "cta": {
          "type": "string",
          "description": "Call to Action（聴衆に取ってほしいアクション）"
        },
        "tone": {
          "type": "string",
          "enum": ["カジュアル", "フォーマル", "情熱的", "落ち着いた"],
          "description": "プレゼンのトーン"
        },
        "source_url": {
          "type": "string",
          "format": "uri",
          "description": "元記事・参考URLがある場合"
        },
        "source_file": {
          "type": "string",
          "description": "入力ファイルパス（Markdown/PPTX等）"
        }
      }
    },
    "outline": {
      "type": "array",
      "minItems": 3,
      "description": "スライドのアウトライン（セクション単位）",
      "items": {
        "type": "object",
        "required": ["section", "title", "type"],
        "properties": {
          "section": {
            "type": "integer",
            "minimum": 1,
            "description": "セクション番号"
          },
          "title": {
            "type": "string",
            "description": "セクション/スライドタイトル"
          },
          "type": {
            "type": "string",
            "enum": [
              "title",
              "agenda",
              "section",
              "content",
              "two_column",
              "photo",
              "demo",
              "summary",
              "closing"
            ],
            "description": "スライドタイプ"
          },
          "key_message": {
            "type": "string",
            "description": "このセクションで伝えたい核心メッセージ"
          },
          "talking_points": {
            "type": "array",
            "items": { "type": "string" },
            "description": "話すポイント（箇条書き）"
          },
          "items": {
            "type": "array",
            "items": { "type": "string" },
            "description": "スライドに表示する項目（agenda等で使用）"
          },
          "notes": {
            "type": "string",
            "description": "補足・演出メモ"
          },
          "estimated_slides": {
            "type": "integer",
            "minimum": 1,
            "description": "このセクションの推定スライド数"
          },
          "materials_needed": {
            "type": "array",
            "items": { "type": "string" },
            "description": "必要な素材（画像・コード等）"
          }
        }
      }
    },
    "materials": {
      "type": "object",
      "description": "必要な素材リスト",
      "properties": {
        "images": {
          "type": "array",
          "items": { "type": "string" },
          "description": "必要な画像・図の説明"
        },
        "code_samples": {
          "type": "array",
          "items": { "type": "string" },
          "description": "必要なコードサンプルの説明"
        },
        "demos": {
          "type": "array",
          "items": { "type": "string" },
          "description": "デモの内容"
        },
        "data": {
          "type": "array",
          "items": { "type": "string" },
          "description": "必要なデータ・統計"
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "制約事項",
      "properties": {
        "avoid_topics": {
          "type": "array",
          "items": { "type": "string" },
          "description": "避けるべきトピック"
        },
        "required_branding": {
          "type": "string",
          "description": "ブランディング要件"
        },
        "accessibility": {
          "type": "string",
          "description": "アクセシビリティ要件"
        }
      }
    },
    "next_steps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Orchestrator への引継ぎ時の推奨アクション"
    }
  }
}
